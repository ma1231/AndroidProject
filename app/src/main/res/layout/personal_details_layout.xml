<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.personalapplication.ui.custom.CustomToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:button_text="退出登录"
        app:button_visibility="visible"
        app:left_text="个人信息" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.personalapplication.ui.custom.MouldView
            android:id="@+id/mould_birthday"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            app:edit_visibility="visible"
            app:img_src="@mipmap/header"
            app:text="生日" />

        <com.example.personalapplication.ui.custom.MouldView
            android:id="@+id/mould_password"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            app:edit_visibility="visible"
            app:img_src="@mipmap/header"
            app:text="密码" />
    </LinearLayout>

</LinearLayout>